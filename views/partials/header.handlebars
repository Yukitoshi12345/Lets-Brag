<header class="navbar bg-neutral text-accent rounded-xl font-heading mt-4">
    <div class="navbar-start">
        <a class="text-2xl font-semibold hover:opacity-70 rounded-md" href="/">Home</a>
    </div>
    <div class="navbar-center">
        <div class="px-3 py-2 rounded-lg text-3xl shadow-xl truncate duration-1000 relative sliding-anim font-bold font-heading cursor-default ">
            <span></span>
            <span></span>
            <span></span>
            <span></span>
            Let's Brag
        </div>
    </div>
    <div class="navbar-end">
        <span class="text-sm text-white">
            {{#if loggedIn}}
                <span id="loggedInUser"> </span>
                {{!-- G'day, {{loggedInUser}}! --}}
            {{else}}
                G'day, Guest!
            {{/if}}
        </span>
        <div class="dropdown dropdown-end">
            
            <div tabindex="0" role="button" class="btn btn-ghost btn-circle avatar">
                
                <div class="w-10 mask mask-hexagon relative">
                    {{#if loggedIn}}
                    {{!-- <img alt="Logged in user profile photo" src="/images/{{loggedInUserPhoto}}" /> --}}
                    <img alt="Logged in user profile photo" src=`` id="loggedInUserPhoto"/>
                    {{else}}
                    <img alt="stranger photo" src="/images/avatar.png" />
                    {{/if}}
                </div>
            </div>
            <ul tabindex="0"
                class="mt-3 z-[1] p-2 shadow menu menu-sm dropdown-content bg-base-100 rounded-box w-52">

                <li>
                    {{!-- <a class="justify-between" href="/dashboard/">Dashboard</a> --}}
                    <button class="btn-ghost" id="dashboard">Dashboard</button>
                </li>
                
                {{#if loggedIn}}
                    <li><button class="btn-ghost" id="logout">Logout</button></li>
                {{else}}
                    {{!-- <li><a href="/login">Login</a></li> --}}
                    <li><button class="btn-ghost" id="login">Login</button></li>
                {{/if}}
                
            </ul>
        </div>
     </div>
</header>
