<form class=" opacity-95 shadow-lg rounded-lg px-8 pt-6 pb-8 mb-16 w-full">


    <label class="block text-blue-300 py-2 font-bold mb-6" for="title">
        Edit your post title (Please don't include any html tags)
    </label>
   <div id="title" class=" shadow-inner bg-neutral editable px-4 py-3 rounded focus:ring transform transition hover:scale-105 duration-300 ease-in-out" contenteditable ="true" maxLength="125">{{title}}</div>
    <p class="mt-2 invisible peer-invalid:visible text-pink-600 text-sm ">
        Please provide a post title.
    </p>


    <label class="block text-blue-300 py-2 font-bold mb-2" for="content">
        Edit your post content (Please include html tags)
    </label>
    <textarea class=" textarea textarea-bordered bg-neutral textarea-lg w-full  peer shadow appearance-none p-3 placeholder-shown:text-white  leading-tight focus:ring transform transition hover:scale-105 duration-300 ease-in-out" id="post" required rows="30">{{content}}</textarea>
    <p class="mt-2 invisible peer-invalid:visible text-pink-600 text-sm ">
        Please provide a post content.
    </p>
    <div class="flex gap-4">
        <button class="btn btn-accent text-accent-content "  type="button" id="update" data-id={{id}}>Update Post </button>
        <button class="btn btn-accent text-accent-content "  type="button" id="cancel" >Cancel </button>
    </div>

</form>
