
<div class="hero hover:opacity-70 rounded-md">
    <div class="hero-content flex-col md:flex-row-reverse">
        {{#if profile_photo}}
            <img src="/images/{{profile_photo}}" class="max-w-16 rounded-lg shadow-2xl" />
        {{else}}
            <img src="/images/avatar.png" class="max-w-16 rounded-lg shadow-2xl" />
        {{/if}}
        <div>
            <h2 class=" font-bold text-accent">Welcome, {{username}}!</h2>
            <div class="text-right">
                {{email}}
            </div>
        </div>
    </div>
</div>


