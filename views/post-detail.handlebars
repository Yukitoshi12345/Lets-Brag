<article class=" card card-compact bg-neutral shadow-xl hover:opacity-90 px-6 py-3">
    <figure class=" flex justify-center rounded-md "><img src="/images/{{post_photo}}" alt="{{title}}" class="rounded-xl"  />
    </figure>
    <div class="card-body">
        <div class=" flex flex-col justify-start gap-3 my-4 md:flex-row">
            <h2 class=" text-accent">{{ title }}</h2>
            {{>post-info}}
        </div>
        <div>{{>post-stats}}</div>
        <div class="my-4 prose  md:prose-lg lg:prose-xl  min-w-full">
            {{{ content }}}
        </div>
        <div>
            {{>rating-hearts}}
        </div>
        <div class="my-8 shadow-sm p-4">
            <h2 class=" text-accent space-y-4 ">Comments </h2>
            {{#if comments}}
           
                {{#each comments as |comment|}}
                    {{> post-detail--comment-card commenterId=../loggedInUserId}}
                {{/each}}
            {{else}}
                <h2>There are no comments for this post yet!</h2>
            {{/if}}

        </div>
        <div class=" shadow-sm ">
            {{>comment-form name='createForm'}}
        </div>
    </div>
</article>
<script src= "/scripts/comment.js" type="application/javascript"></script>